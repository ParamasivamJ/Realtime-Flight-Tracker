FROM node:18-alpine

WORKDIR /app

# Install curl for health checks
RUN apk add --no-cache curl

# Copy package files and install dependencies
COPY flight-frontend/package*.json ./
RUN npm install

# Copy frontend code
COPY flight-frontend/ .

# Expose port
EXPOSE 3000

# Run React dev server - FIXED COMMAND
CMD ["npm", "run", "dev"]